<MainScreen>:
    name:"main_screen"
    FloatLayout:
        MDNavigationLayout:
            ScreenManager:
                Screen:
                    BoxLayout:
                        orientation: 'vertical'
                        MDTopAppBar:
                            title: 'ATTEMPTS'
                            left_action_items: [["menu",lambda x: nav_drawer.set_state("open")]]
                            elevation:10
                        Widget:
                    MDRectangleFlatIconButton:
                        id: play_button
                        icon: "play"
                        text: "PLAY"
                        bold: True
                        font_name: "SamsungSans-Bold.ttf"
                        font_style: "H5"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        on_press: root.switch_to_playzone()
                    MDRectangleFlatIconButton:
                        pos_hint: {"center_x": 0.5, "center_y": 0.1}
                        icon:"information-outline"
                        text: "Developed By AMEN"
                        disabled:True
                        
            MDNavigationDrawer:
                id: nav_drawer
                BoxLayout:
                    orientation:"vertical"
                    spacing:"8dp"
                    padding:"8dp"
                    Image:
                        source:"nums3.jpg"
                    MDNavigationDrawerDivider:
                    ScrollView:
                        MDList:
                            GridLayout:
                                rows:3
                                MDSwitch:
                                    id: screentheme
                                    active: True
                                    icon_active: "weather-sunny"
                                    icon_inactive: "weather-night"
                                    icon_inactive_color: "grey"
                                    on_active: app.switch_theme(self.active)
                                OneLineIconListItem:
                                    text: "Game Manual"
                                    on_release: root.switch_to_infopage()
                                    IconLeftWidget:
                                        icon: "information"
                                OneLineIconListItem:
                                    on_release: root.close_app()
                                    text: "EXIT"       
                                    IconLeftWidget:
                                        icon: "logout"
<PlayzoneScreen>:
    name: "playzone"
    GridLayout:
        cols: 3
        MDLabel:
            text: "ATTEMPT"
            halign: "center"
            font_style: "H6"
            size_hint_y: None
            height: "32dp"
            color: (0.3, 1, 0.5, 1) if app.theme_cls.theme_style == 'Dark' else (1, 0.4, 0.5, 1)
        MDLabel:
            text: "ID"
            halign: "center"
            font_style: "H6"
            size_hint_y: None
            height: "32dp"
            color: (0.3, 1, 0.5, 1) if app.theme_cls.theme_style == 'Dark' else (1, 0.4, 0.5, 1)
        MDLabel:
            text: "POS"
            halign: "center"
            font_style: "H6"
            size_hint_y: None
            height: "32dp"
            color: (0.3, 1, 0.5, 1) if app.theme_cls.theme_style == 'Dark' else (1, 0.4, 0.5, 1)
    Widget:
    BoxLayout:    
        ScrollView:
            MDLabel:
                id: attempt_history
                text: ""
                font_name: "SamsungSans-Bold.ttf"
                halign: "left"
                valign: "top"
                size_hint_y: None
                height: dp(100)
                color: (0.3, 1, 0.5, 1) if app.theme_cls.theme_style == 'Dark' else (1, 0.4, 0.5, 1) 
    MDTextField:
        id: attempt
        mode: "rectangle"
        size_hint_x: None
        width: "240dp"
        pos_hint: {"center_x": .4, "center_y": .2}
        hint_text: "Attempt"
        size: "150dp", "36dp"
        helper_text: "Avoid 0" if "0" in attempt.text  else "Invalid length" if len(attempt.text) != 4 else ""
        helper_text_mode: "on_focus"
        icon_left: "numeric"
        input_filter: "int"
        max_text_length: 4
        on_text_validate: root.attempt_processor()
    MDRectangleFlatIconButton:
        id: gobutton
        icon: "play"
        text: 'GO'
        size_hint: None, None
        font_name: "SamsungSans-Bold.ttf"
        size: "100dp", "30dp"
        pos_hint: {"center_x": .65, "center_y": .195}
        on_press: root.attempt_processor()
        on_release: root.show_attempts() 
        disabled: True if len(set(attempt.text)) != 4 or '0' in attempt.text else False 
<InfoScreen>:
    name:"infopage"
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: "Game Manual"
            elevation: 8
        MDFloatingActionButton:
            icon:"arrow-left-bold"
            pos_hint: {'x': 0.05, 'y': 0.7} 
            on_press: root.switch_to_mainscreen()
        ScrollView:
            MDList:
                TwoLineListItem:
                    text:"Numbers can't be repeated and can't contain zero"
                    disabled:True
                    font_style:"Subtitle1"

                TwoLineListItem:
                    text:"You will win if you get the 4 numbers with their correct positions"
                    font_name: "SamsungSans-Bold.ttf"
                    disabled:True
                    font_style:"Subtitle1"
<VictoryScreen>:
    name:"victorypage"
    MDNavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: 'vertical'
                    MDTopAppBar:
                        title:"Victory!"
                        elevation:10
                    Widget:
                MDRectangleFlatIconButton:
                    id: continue_button
                    icon:"arrow-right"
                    text:"Continue"
                    font_name: "SamsungSans-Bold.ttf"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                    on_press:root.switch_to_mainscreen()
                MDLabel:
                    text: "YOU WON"
                    font_name: "SamsungSans-Bold.ttf"
                    font_style:"H6"
                    halign:"center"
                    color: (0.3, 1, 0.5, 1) if app.theme_cls.theme_style == 'Dark' else (1, 0.4, 0.5, 1)

        

